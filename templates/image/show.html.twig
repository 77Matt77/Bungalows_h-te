{% extends "bases/admin.html.twig" %}

{% block title %}
    <title>Détails de l'image</title>
{% endblock %}

{% block main %}
    <div class="container">
        <h1 class="mt-5">Détails de l'image</h1>

        <table class="table mt-4">
            <tbody>
                <tr>
                    <th scope="row">Id</th>
                    <td>{{ image.id }}</td>
                </tr>
                <tr>
                    <th scope="row">Nom</th>
                    <td>{{ image.nom }}</td>
                </tr>
                <tr>
                    <th></th>
                </tr>
                <!-- Ajoutez d'autres lignes ici si nécessaire -->
            </tbody>
        </table>

        <div class="text-end">
            <a href="{{ path('app_image_index') }}" class="btn btn-primary">Retour à la liste</a>
            <a href="{{ path('app_image_edit', {'id': image.id}) }}" class="btn btn-secondary">Modifier</a>
            {{ include('image/_delete_form.html.twig') }}
        </div>
    </div>
{% endblock %}
