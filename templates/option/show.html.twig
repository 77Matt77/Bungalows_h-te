{% extends "bases/admin.html.twig" %}

{% block title %}Détails de l'option{% endblock %}

{% block description %}Détails de l'option{% endblock %}

{% block main %}
    <div class="container">
        <div class="row justify-content-center">
            <div class="col-md-8">
                <h1 class="text-center mb-4">Option</h1>
                <table class="table">
                    <tbody>
                        <tr>
                            <th>Id</th>
                            <td>{{ option.id }}</td>
                        </tr>
                        <tr>
                            <th>Nom</th>
                            <td>{{ option.nom }}</td>
                        </tr>
                        <tr>
                            <th>Description</th>
                            <td>{{ option.description }}</td>
                        </tr>
                        <tr>
                            <th>Prix</th>
                            <td>{{ option.prix }}</td>
                        </tr>
                    </tbody>
                </table>
                <a href="{{ path('app_option_index') }}" class="btn btn-primary">Retour à la liste</a>
                <a href="{{ path('app_option_edit', {'id': option.id}) }}" class="btn btn-warning">Modifier</a>
                {{ include('option/_delete_form.html.twig') }}
            </div>
        </div>
    </div>
{% endblock %}
