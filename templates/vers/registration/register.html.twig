			{% block main %}


				<main class="container my-5">
					<div class="row justify-content-center">

						<div class="col-lg-6 col-md-8 col-sm-10 my-5">
							<form method="post" class=" p-4  " style="background-color: white; color: #08c5d1;  border-radius: 1%;">
								{% for flash_error in app.flashes('verify_email_error') %}
									<div class="alert alert-danger">{{flash_error}}</div>
								{% endfor %}
								{{ form_start(registrationForm) }}
								<h1 class="h3 mb-3 font-weight-normal text-center">Veuillez vous s'inscrire</h1>
								<div class="row">
									<div class="col-md-6 mb-3">
										<label for="registrationForm.firstName">Prénom :</label>
										<div class="text-danger">
											{{ form_errors(registrationForm.firstName)}}</div>
										{{ form_widget(registrationForm.firstName, {'attr': {'class':'form-control', 'autophocus': 'autofocus'}})}}
									</div>
									<div class="col-md-6">
										<label for="registrationForm.lastName">Nom :</label>
										<div class="text-danger">
											{{ form_errors(registrationForm.lastName)}}</div>
										{{ form_widget(registrationForm.lastName, {'attr': {'class':'form-control'}})}}
									</div>
								</div>

								<div class="mb-3">
									<label for="registrationForm.email">Email :</label>
									<div class="text-danger">
										{{ form_errors(registrationForm.email)}}</div>
									{{ form_widget(registrationForm.email, {'attr': {'class':'form-control'}})}}
								</div>

								<div class="mb-3">
									<label for="registrationForm.password.first">Mot de passe :</label>
									<div class="text-danger">
										{{ form_errors(registrationForm.password.first)}}</div>
									{{ form_widget(registrationForm.password.first, {'attr': {'class':'form-control','placeholder':'Au moins 12 caractères.'}})}}
									<small>Le mot de passedoit contenir au moins 12 caractères.</small>
								</div>

								<div class="mb-3">
									<label for="(registrationForm.password.second">Confirmation du mot de passe :</label>
									<div class="text-danger">
										{{ form_errors(registrationForm.password.second)}}</div>
									{{ form_widget(registrationForm.password.second, {'attr': {'class':'form-control'}})}}
								</div>
								<div class="mb-3 d-flex align-items-center">
									<label for="registrationForm.agreeTerms">{{ form_widget(registrationForm.agreeTerms) }}</label>
										 <span class="ms-5">Lire et accepter <a href="#" data-bs-toggle="modal" data-bs-target="#agreeTermsModal" style="color: #fd7e14;">les conditions générales d'utilisation.</a></span>

									<!-- Modal -->
									<div class="modal fade" id="agreeTermsModal" data-bs-backdrop="static" data-bs-keyboard="false" tabindex="-1" aria-labelledby="staticBackdropLabel" aria-hidden="true">
										<div class="modal-dialog modal-dialog-scrollable">
											<div class="modal-content">
												<div class="modal-header">
													<h1 class="modal-title fs-5" id="exampleModalLabel">Les condition générales d'utilisations</h1>
