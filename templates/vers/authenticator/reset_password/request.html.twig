{# {% extends 'base.html.twig' %} #}
<!DOCTYPE html>
<html lang="fr">
	<head>
		{# L'encodage des caractère #}
		<meta
		charset="UTF-8">

		{# Minimum de responsive #}
		<meta
		name="viewport" content="width=device-width, initial-scale=1.0">

		{# Feuille de style bootstrap 5 #}
		<link
		href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-T3c6CoIi6uLrA9TneNEoa7RxnatzjcDSCmG1MXxSR1GAsXEV/Dwwykc2MPK8M2HN" crossorigin="anonymous">


		{# Google font #}
		<link rel="preconnect" href="https://fonts.googleapis.com">
		<link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
		<link
		href="https://fonts.googleapis.com/css2?family=Cherry+Swash&display=swap" rel="stylesheet">

		{# Le titre #}
		<title>
			{% block title %}Réinitialisation du mot de passe
			{% endblock %}
		</title>

		{# La description de chaque pages #}
		<meta
		name="description" content="{% block description %}{% endblock %}">

		{# Les balises utiles pour le SEO #}
		<meta name="robots" content="index, follow">
		<meta name="author" content="Matt">
		<meta
		name="publisher" content="Matt">

		{# favicon #}
		<link rel="apple-touch-icon" sizes="72x72" href="{{asset("android-chrome-72x72.png")}}">
		<link rel="icon" type="image/png" sizes="32x32" href="{{asset("favicon-32x32.png")}}">
		<link rel="icon" type="image/png" sizes="16x16" href="{{asset("favicon-16x16.png")}}">
		<link rel="manifest" href="/site.webmanifest">
		<link rel="mask-icon" href="/safari-pinned-tab.svg" color="#5bbad5">
		<meta name="msapplication-TileColor" content="#da532c">
		<meta
		name="theme-color" content="#ffffff">

		{# style.css #}
		<link
		rel="stylesheet" href="{{asset("css/style.css")}}">


		{# titre #}
		<title>Document</title>
	</head>
	<body>

		<nav class="navbar navbar-expand-lg bg-body-tertiary ">
			<div class="container-fluid">
				<a class="navbar-brand" href="{{path("vers_accueil_index")}}"><img src="{{asset("img/logo.jpg")}}" alt="logo"></a>
				<button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarNav" aria-controls="navbarNav" aria-expanded="false" aria-label="Toggle navigation">
					<span class="navbar-toggler-icon"></span>
				</button>
				<div class="collapse navbar-collapse" id="navbarNav">
					<ul class="navbar-nav">
						<li class="nav-item">
							<a class="nav-link active" aria-current="page" href="{{path("vers_accueil_index")}}" style="color: #08c5d1;">Eden - Emma Polynesia</a>
						</li>
					</ul>
				</div>
			</div>
		</nav>

		{% block body %}
			<main>
				<div class="container">
					<div class="row justify-content-center align-items-center vh-50">
						<div class="col-md-6">
							<div class="card shadow">
								<div class="card-body">
									<h1 class="text-center my-3 display-5">Réinitialisation du mot de passe</h1>

									{% for flash_error in app.flashes('reset_password_error') %}
										<div class="alert alert-danger" role="alert">{{ flash_error }}</div>
									{% endfor %}

									{{ form_start(requestForm) }}
									<div class="mb-3">
										{{ form_row(requestForm.email, {'attr': {'class': 'form-control', 'placeholder': 'Adresse e-mail'}}) }}
									</div>

									<div class="mb-3">
										<small>
											Entrez votre adresse e-mail et nous vous enverrons un lien pour réinitialiser votre mot de passe.
										</small>
									</div>

									<button class="btn btn-primary w-100">réinitialisation du mot de passe</button>
									{{ form_end(requestForm) }}
								</div>
							</div>
						</div>
					</div>
				</div>
			</main>
		{% endblock %}
	</body>
	<script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/js/bootstrap.bundle.min.js" integrity="sha384-C6RzsynM9kWDrMNeT87bh95OGNyZPhcTNXj1NW7RuBCsyN/o0jlpcV8Qyq46cDfL" crossorigin="anonymous"></script>
</html>

