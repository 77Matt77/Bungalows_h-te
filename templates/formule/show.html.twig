{% extends "bases/admin.html.twig" %}

{% block title %}Liste des catégories{% endblock %}

{% block description %}Liste des catégories{% endblock %}

{% block main %}
    <div class="container mt-5">
        <h1 class="text-center mb-4">Liste des Formules</h1>

        <table class="table table-bordered">
            <tbody>
                <tr>
                    <th scope="row">Id</th>
                    <td>{{ formule.id }}</td>
                </tr>
                <tr>
                    <th scope="row">Nom</th>
                    <td>{{ formule.nom }}</td>
                </tr>
                <tr>
                    <th scope="row">Description</th>
                    <td>{{ formule.description }}</td>
                </tr>
                <tr>
                    <th scope="row">Prix</th>
                    <td>{{ formule.prix }}</td>
                </tr>
            </tbody>
        </table>

        <div class="text-center">
            <a href="{{ path('app_formule_index') }}" class="btn btn-secondary">Retour à la liste</a>
            <a href="{{ path('app_formule_edit', {'id': formule.id}) }}" class="btn btn-primary">Modifier</a>
        </div>

        <div class="text-center mt-3">
            {{ include('formule/_delete_form.html.twig') }}
        </div>
    </div>
{% endblock %}
