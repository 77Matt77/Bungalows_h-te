{% extends "bases/admin.html.twig" %}

{% block title %}Images{% endblock %}

{% block description %}Images{% endblock %}

{% block main %}

    <h1 class="text-center my-3 display-2">Images</h1>

    <table class="table table-hover text-center">
        <thead>
            <tr>
                <th>id</th>
                <th>Image</th>
            </tr>
        </thead>

        <tbody>
            {% for image in images %}
                <tr>
                    <td>{{ image.id }}</td>
                    <td>
                        <img src="{{ asset('images/' ~ image.nom) }}" alt="{{ image.nom }}" class="card-img-top img-fluid">
                    </td>
                </tr>
            {% else %}
                <tr>
                    <td colspan="2">Aucun enregistrement trouv√©</td>
                </tr>
            {% endfor %}
        </tbody>
    </table>

    <h2 class="text-center my-3">Ajouter une nouvelle image</h2>

    {{ form_start(form) }}
    {{ form_widget(form) }}
    <button type="submit" class="btn btn-primary w-100 my-2">Ajouter</button>
    {{ form_end(form) }}

{% endblock %}
