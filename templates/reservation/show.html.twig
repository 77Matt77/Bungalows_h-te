<title>Reservation</title>

{% block body %}
    <h1>Reservation</h1>

    <table class="table">
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ reservation.id }}</td>
            </tr>
            <tr>
                <th>DateArriver</th>
                <td>{{ reservation.dateArriver ? reservation.dateArriver|date('Y-m-d H:i:s') : '' }}</td>
